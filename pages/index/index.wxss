/**index.wxss**/
.logo{
  width: 100%;
}
.csselogo{
  margin-top:10px;
  max-height:100rpx;
  margin-bottom: 10px;
}
.csse-form{
  display: block;
  margin-top: 15px;
}
.csse-form-item{
  margin-bottom: 15px;
  clear: both;
}
.csse-input-block{
  margin-left: 110px;
  min-height: 36px;
}
.csse-input{
  display: block;
  /* width: 100%; */
  padding-left: 10px;
  height: 38px;
  line-height: 1.3;
  border-width: 1px;
  border-style: solid;
  background-color: #fff;
  border-radius: 2px;
}
.csse-input::-webkit-input-placeholder,.csse-select::-webkit-input-placeholder,.csse-textarea::-webkit-input-placeholder {
    line-height: 1.3
}
.csse-lable{
  float: left;
  display: block;
  padding: 9px 15px;
  width: 80px;
  font-weight: 400;
  line-height: 20px;
  text-align: right;
}
.csse-btn{
  display: inline-block;
  height: 38px;
  line-height: 38px;
  padding: 0 18px;
  background-color: #009688;
  color: #fff;
  white-space: nowrap;
  text-align: center;
  font-size: 14px;
  border: none;
  border-radius: 2px;
  cursor: pointer;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.placeholder{
    /* margin: 5px;
    padding: 0 10px; */
    text-align: left;
    /* background-color: #F7F7F7; */
    height: auto;
    line-height: 2.3em;
    color: rgba(0,0,0,.3);
    padding: 16px 25px;
}
.myform{
  padding: 0;
}
.weui-form__control-area{
  margin: 0 0;
}
.page__title{
  text-align: center;
  padding: 16px 32px;
}
.page__desc{
  padding: 2px 32px;
}
.weui-btn_primary{
  margin: 0 5px;
  display: inline-block;
}

.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 150rpx;
  width: 100%;
  height: 100%;
}
 
.modal-content {
  background: #fff;
  width: 600rpx;
  margin: 40% auto 0;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ebebec;
}
 
.content-title {
  height: 100rpx;
  text-align: center;
  font-size: 1.2rem;
  padding-top: 10rpx;
}
 
.content-text {
  padding: 0 50rpx 50rpx;
}
 
.modal-btns {
  width: 600rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
   overflow: hidden;
   display: flex;
}
 
.dialog-btn {
  border-radius: 0;
  background: #fff;
  height: 100rpx;
  width: 100%;
 
}
 
.dialog-btn::after {
  border: none;
  border-radius: 0;
}
 
.cancel {
  display: inline-block;
  /* width: 35%; */
  color: #ccc;
}
 
.confirm {
  display: inline-block;
  /* width: 35%; */
  /* width: 600rpx; */
  border-left: 1px solid #ebebec;
  color: #60d048;
}
.modal_mask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  background:rgba(0, 0, 0, 0.5);
  overflow: hidden;
}
.modal_box{
  position: fixed;
  width: 600rpx;
  overflow: hidden;
  background: #FAFAFA;
  z-index: 1001;
  top: 50%;
  left: 0;
  border-radius: 10rpx;
  margin:-150px 75rpx 0 75rpx;
  padding-top: 10rpx;
}

.tipmask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  vertical-align: middle;
  color: white;
  text-align:center;
  z-index: 1000;
  background:rgba(0, 0, 0, 0.5);
  overflow: hidden;
}
